{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "shell": {
            "executable": "powershell"
        }
    },
    "tasks": [
        {
            "label": "make emu",
            "type": "shell",
            "command": "make",
            "args": [
                "-f",
                "${workspaceFolder}/emu.mk",
                "all"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean emu",
            "type": "shell",
            "command": "make",
            "args": [
                "-f",
                "${workspaceFolder}/emu.mk",
                "clean"
            ],
            "group": "build"
        },
    ]
}